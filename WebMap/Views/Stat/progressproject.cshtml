@model WebMap.Models.ProjetModels



@{
    ViewBag.Title = "progressproject";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<h2>progressproject</h2>
<
<!DOCTYPE HTML>
<html>
<head>

    <script>
        window.onload = function () {

    var chart = new CanvasJS.Chart("hero-donut", {
	theme: "light1", // "light1", "light2", "dark1", "dark2"
	exportEnabled: true,
	animationEnabled: true,
	title: {
		text: "Indian Smartphone Market Share"
	},
	subtitles: [{
		text: "Q2, 2016"
	}],
	data: [{
        type: "doughnut",
		startAngle: 180,
		toolTipContent: "<b>{label}</b>: {y}%",
		showInLegend: "true",
		legendText: "{label}",
		indexLabel: "{label} - {y}%",
		dataPoints: @Html.Raw(ViewBag.DataPoints)
	}]
});
chart.render();

}
    </script>
</head>
<body>
    <div>
        <form method="get" action="progressproject">
            <select id="mySelect" name="id">
                @{
                    foreach (var item in ViewBag.ListProjet as IEnumerable<WebMap.Models.ProjetModels>)
                    {
                        <option value="@item.id">
                            @item.name
                        </option>
                    }
                }
            </select>
            <input type="submit" value="chart"/>
        </form>
    </div>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
    <div class="col-lg-6">
        <div class="content-panel">
            <h4><i class="fa fa-angle-right"></i> Chart Example 4</h4>
            <div class="panel-body">
              
                  <div id="hero-donut" class="graph" style="height: 370px; width: 100%;"></div>
              
            </div>
        </div>
    </div>
    </div>
    </div>
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</body>
</html> 


