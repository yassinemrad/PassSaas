@model WebMap.Models.DataPoint

@{
    ViewBag.Title = "durationtask";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<h2>durationtask</h2>

<!DOCTYPE HTML>
<html>
<head>
    
  
  
    <script>
        window.onload = function () {

            var chart = new CanvasJS.Chart("hero-graph", {
                animationEnabled: false,
                exportEnabled: true,
                title: {
                    text: ""
                },
                axisX: {

                },
                axisY: {
                    title: "Real duration task",
                    includeZero: false
                },
                data: [{
                    type: "line",
                    dataPoints: @Html.Raw(ViewBag.DataPoints1)
	}]
            });

            chart.render();
            var canvas = $("#hero-graph .canvasjs-chart-canvas").get(0);
            var dataURL = canvas.toDataURL();
            var jsonData = @Html.Raw(ViewBag.DataPoints1);
            var cat = [];
            var pourc = [];
            var datap = [];
            jsonData.forEach(item => cat.push(item.label));
            jsonData.forEach(item => pourc.push(item.y));

            for (var i = 0; i < cat.length; i++) {
                var data = [];
                data.push(cat[i]);
                data.push(pourc[i] + "h");
                datap.push(data);
            }
                $("#btn_report").click(function () {
                    var pdf = new jsPDF();

                    pdf.addImage(dataURL, 'JPEG', 0, 20);
                    pdf.autoTable({
                        margin: { top: 100 },
                        head: [['Tache', 'Real duration']],
                        body: datap
                    });
                    pdf.save("download2.pdf");
                });
            

        }
        

    </script>




    <script>


    </script>
</head>
<body>



    <div class="row mt">
       

        <div style="height:500% ; width:99%; margin-top: 150px;
    margin-left: 5px; box-shadow: 6px 6px 6px black;" >
            <div class="content-panel">
                
                <div class="panel-body">
                    <div id="hero-graph" class="graph" style="height: 370px; width: 100%;">

                    </div> <input id="btn_report" type="submit" value="report" style="width:150px;height:27px" />



                </div>
            </div>
        </div>
    </div>

    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

    <script src="~/Scripts/jspdf.min.js"></script>
    <script src="https://unpkg.com/jspdf-autotable"></script>

</body>
</html>  