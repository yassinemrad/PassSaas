@model IEnumerable<WebMap.Models.reclamationViewModel>
@{
    ViewBag.Title = "MyReclamation";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}
<h2><i class="fa fa-angle-right"></i>     My Reclamations</h2>
<hr>



@{ if (TempData["erreur"] != null)
    {
        @section js{
            <script src="~/Scripts/jquery-2.2.4.min.js"></script>
            <script src="~/Scripts/toastr.min.js"></script>
            <link href="~/Content/toastr.min.css" rel="stylesheet" />
            <script type="text/javascript">

                $(document).ready(function () {

                    toastr.error('Reclamation already treat');


                });
            </script>
        }}

}
            <table class="table table-striped table-advance table-hover" align="center">
                <tr>
                    <th>
                        <i class="fa fa-bookmark"></i>
                        @Html.DisplayName("Object")
                    </th>
                    <th class="hidden-phone">
                        <i class="fa fa-question-circle"></i>
                        @Html.DisplayName("Description")
                    </th>
                    <th>
                        <i class="fa fa-calendar" />
                        @Html.DisplayName("Date")
                    </th>
                    <th></th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.objet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.date)
                        </td>
                        <td>

                            <button class="btn btn-primary btn-xs" onclick="
                       location.href= '@Url.Action("Edit", "Reclamation", new { id = item.id })'">
                                <i class="fa fa-pencil"></i>
                            </button>


                            <button class="btn btn-danger btn-xs" onclick="
                       location.href= '@Url.Action("Delete", "Reclamation", new { id = item.id })'">
                                <i class="fa fa-trash-o "></i>
                            </button>

                        </td>
                    </tr>
                }
            </table>
<button class="btn btn-success" onclick="
                       location.href= '@Url.Action("Create", "Reclamation" ,new { id = ViewBag.us })'">
    <i class="glyphicon glyphicon-plus"></i>
</button>