@model IEnumerable<WebMap.Models.reclamationViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

<h2><i class="fa fa-angle-right"></i>     New Reclamations</h2>
<hr >

<table class="table table-striped table-advance table-hover" align="center">
    <tr>
        <th>
            <i class="fa fa-bookmark"></i>
            @Html.DisplayName("Object")
        </th>
        <th class="hidden-phone">
            <i class="fa fa-question-circle"></i>
            @Html.DisplayName("Description")
        </th>
        <th>
            <i class="fa fa-calendar" />   
            @Html.DisplayName("Date")
        </th>
        <th>
            <i class="fa fa-bullhorn"></i>
            @Html.DisplayName("UserName")
        </th>
        <th>
            <i class=" fa fa-edit"></i>
            Treat
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.objet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                <button class="btn btn-success btn-xs" onclick="
                       location.href= '@Url.Action("Traitement", "Reclamation", new { id = item.id, mail = item.mail, suj = item.objet })'
">
                    <i class="fa fa-check"></i>
                </button>
            </td>
        </tr>
    }
</table>

<button type="button" class="btn btn-theme"
        onclick="
    location.href= '@Url.Action("Traiter", "Reclamation")'
    " >
    <i class="fa fa-cog"></i>Olds
</button>