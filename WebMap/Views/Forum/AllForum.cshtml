@using PagedList;
@using PagedList.Mvc ;
@model IPagedList<WebMap.Models.ForumModels>



@{

                Layout = "~/Views/Shared/_MyTemplatepage.cshtml";
}

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                <div>

                    Search By Category <input type="text" class="form-control" placeholder="Search" autofocus="" @Html.TextBox("search")


                </div>
            </td>
            <td>
                <input type="submit" value="search" id="recherche" class="btn btn-theme btn-block" />
            </td>
            @*<button type="button" class="btn btn-round btn-warning">Warning</button>*@
        </tr>

    </table>
