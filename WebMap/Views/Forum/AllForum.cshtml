        <style type="text/css">
            .by_this_theme_fix {
                display: none;
            }

            .Textred {
                color: red;
            }

            .Textgreen {
                color: green;
            }

            .Textdark {
                color: darkslategrey;
            }

            .button {
                float: right;
            }

            .votes {
                background: #82b541;
                float: left;
                width: 65px;
                height: 65px;
                font-size: 14px;
                text-align: center;
                line-height: normal;
                color: #fff;
                margin-right: 25px;
            }

            .summary {
                color: #da3131;
                vertical-align: middle;
            }

            .by_this_theme_fix span {
                font-size: 16px;
                vertical-align: middle;
            }

            .by_this_theme_fix:hover {
                background-color: #58da7d;
                color: #fff;
            }
        </style>
        <style>
            .content {
                width: 70%;
                float: none;
            }
        </style>


    }
    <div>

        @Html.PagedListPager(Model, page => Url.Action("AllForum", new
   {
       page, AllForum = Request.QueryString["AllForum"],

   }
       ))
    </div>
